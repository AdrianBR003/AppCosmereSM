<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo para las estrellas vacÃ­as -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Cambia este color al que prefieras -->
        </shape>
    </item>

    <!-- Fondo para las estrellas llenas -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FFC107" /> <!-- Cambia este color al que prefieras -->
            </shape>
        </clip>
    </item>

    <!-- Color de las estrellas activas (llenadas) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FFD700" /> <!-- Cambia este color al que prefieras -->
            </shape>
        </clip>
    </item>
</layer-list>
