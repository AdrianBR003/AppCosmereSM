<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo del botón -->
    <solid android:color="#1A1A1F" /> <!-- Color de fondo -->

    <!-- Borde del botón -->
    <stroke
        android:width="1dp"
        android:color="#BFA26B" /> <!-- Color del borde -->

    <!-- Esquinas redondeadas -->
    <corners android:radius="8dp" /> <!-- Esquinas más redondeadas que el ejemplo inicial -->

    <!-- Padding interno -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
