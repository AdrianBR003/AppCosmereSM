<!-- res/drawable/rounded_bottom_nav.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa para el borde dorado -->
    <item>
        <shape>
            <solid android:color="@color/menuIconos" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Capa para el fondo negro con borde redondeado interior -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape>
            <solid android:color="@color/menufondo" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
