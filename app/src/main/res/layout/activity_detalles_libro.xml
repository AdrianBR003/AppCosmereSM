<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imagen de portada del libro -->
        <ImageView
            android:id="@+id/portadaImageView"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Portada del Libro"
            android:scaleType="centerCrop"
            android:src="@drawable/portada_elcamino" />

        <!-- Título del libro -->
        <TextView
            android:id="@+id/tituloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Título del Libro"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

        <!-- Descripción del libro -->
        <TextView
            android:id="@+id/descripcionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Descripción del Libro"
            android:textAppearance="?attr/textAppearanceBody1" />

        <!-- Puedes agregar más vistas para mostrar información adicional -->

    </LinearLayout>
</ScrollView>
