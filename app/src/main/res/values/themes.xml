<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppSandersonSM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Fondo de la pantalla de inicio -->
        <item name="windowSplashScreenBackground">@color/inicio</item>
        <item name="android:windowBackground">@color/inicio</item>
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/menufondo</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/menufondo</item>
    </style>

    <style name="RecyclerViewScrollbar" parent="Theme.AppCompat.Light">
        <item name="android:scrollbarThumbVertical">@drawable/custom_scrollbar</item>
        <item name="android:scrollbarTrackVertical">@drawable/custom_scrollbartfondo</item>
    </style>

</resources>